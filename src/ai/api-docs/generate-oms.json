        "type": "Record",
        "fields": [
          { "name": "to", "description": "TO address list", "type": { "name": "string|string[]" } },
          { "name": "subject", "description": "Subject of email", "type": { "name": "string" } },
          { "name": "'from", "description": "", "type": { "name": "string?" } },
          { "name": "body", "description": "Text typed body of the email message", "type": { "name": "string?" } },
          { "name": "htmlBody", "description": "HTML typed body of the email message", "type": { "name": "string?" } },
          { "name": "cc", "description": "CC address list", "type": { "name": "string|string[]?" } },
          { "name": "bcc", "description": "BCC address list", "type": { "name": "string|string[]?" } },
          { "name": "replyTo", "description": "Reply To addresses", "type": { "name": "string|string[]?" } },
          { "name": "contentType", "description": "Content Type of the Body", "type": { "name": "string?" } },
          { "name": "headers", "description": "Header list", "type": { "name": "map<string>" } },
          { "name": "sender", "description": "Sender's address", "type": { "name": "string?" } },
          {
            "name": "attachments",
