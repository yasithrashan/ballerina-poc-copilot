[
  {
    "name": "ballerina/email",
    "description": "This module provides APIs to perform email operations such as sending and reading emails using the SMTP, POP3, and IMAP4 protocols.",
    "clients": [
      {
        "name": "SmtpClient",
        "description": "Represents an SMTP Client, which interacts with an SMTP Server.",
        "functions": [
          {
            "name": "init",
            "type": "Constructor",
            "description": "Gets invoked during the `email:SmtpClient` initialization.",
            "parameters": [
              {
                "name": "host",
                "description": "Host of the SMTP Client",
                "type": { "name": "string" }
              },
              {
                "name": "username",
                "description": "Username of the SMTP Client",
                "type": { "name": "string" }
              },
              {
                "name": "password",
                "description": "Password of the SMTP Client",
                "type": { "name": "string" }
              },
              {
                "name": "clientConfig",
                "description": "Configurations for SMTP Client",
                "type": {
                  "name": "SmtpConfiguration",
                  "links": [
                    { "category": "internal", "recordName": "SmtpConfiguration" }
                  ]
                }
              }
            ],
            "return": {
              "description": "An `email:Error` if failed to initialize or else `()`",
              "type": { "name": "Error?", "links": [{ "category": "internal", "recordName": "Error" }] }
            }
          },
          {
            "name": "sendMessage",
            "type": "Remote Function",
            "description": "Sends an email message.\n```ballerina\nemail:Error? response = smtpClient->sendMessage(email);\n```",
            "parameters": [
              {
                "name": "email",
                "description": "An `email:Message` message, which needs to be sent to the recipient",
                "type": { "name": "Message", "links": [{ "category": "internal", "recordName": "Message" }] }
              }
            ],
            "return": {
              "description": "An `email:Error` if failed to send the message to the recipient or else `()`",
              "type": { "name": "Error?", "links": [{ "category": "internal", "recordName": "Error" }] }
            }
          },
          {
            "name": "send",
            "type": "Remote Function",
            "description": "Sends an email message with optional parameters.\n```ballerina\nemail:Error? response = smtpClient->send(toAddress, subject, fromAddress, emailBody, sender=\"eve@abc.com\");\n```",
            "parameters": [
              { "name": "to", "description": "TO address list", "type": { "name": "string|string[]" } },
              { "name": "subject", "description": "Subject of email", "type": { "name": "string" } },
              { "name": "'from", "description": "", "type": { "name": "string" } },
              { "name": "body", "description": "Text body of the email", "type": { "name": "string" } },
              { "name": "options", "description": "Optional parameters of the email", "type": { "name": "Options", "links": [{ "category": "internal", "recordName": "Options" }] } }
            ],
            "return": {
              "description": "An `email:Error` if failed to send the message to the recipient or else `()`",
              "type": { "name": "Error?", "links": [{ "category": "internal", "recordName": "Error" }] }
            }
          }
        ]
      }
    ],
    "functions": null,
    "typeDefs": [
      {
        "name": "SmtpConfiguration",
        "description": "Configuration of the SMTP Endpoint.",
        "type": "Record",
        "fields": [
          { "name": "port", "description": "Port number of the SMTP server", "type": { "name": "int" }, "default": 465 },
          {
            "name": "security",
            "description": "Type of security channel",
            "type": { "name": "Security", "links": [{ "category": "internal", "recordName": "Security" }] },
            "default": "SSL"
          },
          {
            "name": "secureSocket",
            "description": "Secure socket configuration",
            "type": { "name": "SecureSocket?", "links": [{ "category": "internal", "recordName": "SecureSocket" }] }
          }
        ]
      },
      { "name": "Error", "description": "Defines the common error type for the module.", "type": "error" },
      {
        "name": "Message",
